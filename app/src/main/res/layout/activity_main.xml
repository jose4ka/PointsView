<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ru.ecostudiovl.pointsview.PointsView
        android:id="@+id/myPointsView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnRedraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redraw" />

    <CheckBox
        android:id="@+id/cbStroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Рисовать внешний контур" />

    <CheckBox
        android:visibility="gone"
        android:id="@+id/cbInternalNetworks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Рисовать внутренние связи" />

    <CheckBox
        android:visibility="gone"
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckBox" />

</LinearLayout>